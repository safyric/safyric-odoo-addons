<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_recalc_names" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="button_unlock" position="after">
                <button name="recalculate_names" class="ml-2 btn btn-default"
                        string="Reset descriptions" Help="Erase custom descriptions of all lines"
                        type="object" attrs="{'invisible':[('state','not in', ['purchase', 'done'])]}"/>
            </button>
        </field>
    </record>
</odoo>
