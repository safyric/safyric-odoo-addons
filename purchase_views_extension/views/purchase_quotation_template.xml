<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_purchasequotation_document" inherit_id="purchase.report_purchasequotation_document">
    <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
      <attribute name="t-call">purchase_views_extension.external_layout_purchasequotation</attribute>
    </xpath>
    <xpath expr="//t[@t-set='o']" position="after">
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Vendor</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div id="seller">
                    <div class="row">
                      <span t-field="o.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row" t-if="o.partner_id.email">
                        <i class="fa fa-envelope-o fa-fw"/><span t-field="o.partner_id.email"/>
                    </div>
                    <div class="row" t-if="o.partner_id.vat">
                      <span>
                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"/>
                        <t t-if="not o.company_id.country_id.vat_label"><span>Tax ID</span></t><span>: </span>
                      </span>
                      <p t-field="o.partner_id.vat" class="m-0"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="100%">
            <tr>
              <td class="bg-light"><strong>Information</strong></td>
            </tr>
            <tr>
              <td id="information">
                <div class="container">
                  <div class="pull-right">
                    <div class="row">
                      <span>Date: </span>
                      <span t-field="o.date_order" class="m-0" t-options='{"widget": "date"}'/>
                    </div>
                    <div class="row">
                      <span>Company: </span>
                      <span t-field="o.company_id" class="m-0"/>
                    </div>
                    <div class="row">
                      <span>Buyer: </span>
                      <span t-field="o.user_id.partner_id.name" class="m-0"/>
                      <t t-if="o.user_id.partner_id.mobile">
                        <i class="fa fa-mobile"/><span t-field="o.user_id.partner_id.mobile" class="m-0"/>
                      </t>
                    </div>
                    <div t-if="o.user_id.phone" class="row">
                      <i class="fa fa-phone"/>
                      <span t-field="o.user_id.phone" class="m-0"/>
                    </div>
                    <div t-if="o.user_id.email" class="row">
                      <i class="fa fa-envelope-o fa-fw"/>
                      <span t-field="o.user_id.email" class="m-0"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>          
        </div>
        <div class="row">
          <div class="col-6">
            <table class="table-sm border-black" width="90%">
              <tr>
                <td class="bg-light"><strong>Shipping Address</strong></td>
              </tr>
              <tr>
                <td>
                  <div class="container">
                    <div class="row">
                      <t t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
                      </t>
                      <t t-else="">
                        <div t-if="o.picking_type_id and o.picking_type_id.warehouse_id">
                          <span t-field="o.picking_type_id.warehouse_id.name"/>
                          <div t-field="o.picking_type_id.warehouse_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        </div>
                      </t>
                    </div>
                  </div>
                </td>
              </tr>
            </table>
          </div>
        </div>
        <div class="clearfix"/>
      </div>
    </xpath>    
    <xpath expr="//t[@t-set='address']" position="replace"/>
    <xpath expr="//div[@class='page']/h2" position="replace"/>
    
    <xpath expr="//span[@t-field='order_line.date_planned']" position="attributes">
      <attribute name="t-options">{"widget": "date"}</attribute>
    </xpath>
    <xpath expr="//span[@t-field='order_line.date_planned']/.." position="attributes">
      <attribute name="style">white-space: nowrap;</attribute>
    </xpath>
    <xpath expr="//span[@t-field='order_line.product_qty']" position="replace">
      <span t-esc="int(float(order_line.product_qty))"/>
    </xpath>
    <xpath expr="//thead/tr" position="attributes">
      <attribute name="style">white-space: nowrap;</attribute>
    </xpath>
  </template>
</odoo>
