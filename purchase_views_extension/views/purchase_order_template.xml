<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
    <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
      <attribute name="t-call">purchase_views_extension.external_layout_purchaseorder</attribute>
    </xpath>
    <xpath expr="//t[@t-set='o']" position="after">
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Seller</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div id="seller">
                    <div class="row">
                      <span t-if="o.partner_id.parent_id" t-field="o.partner_id.parent_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
		      <span t-else="" t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
		    <div class="row" t-if="o.partner_id.parent_id">
			<span>Contact: </span>
			<span t-field="o.partner_id.name"/>
		    </div>
                    <div class="row" t-if="o.partner_id.vat">
                      <span>
                        <t if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"/> 
                        <t if="not o.company_id.country_id.vat_label"><span>Tax ID: </span></t>
                      </span>
                      <span t-field="o.partner_id.vat"/>
                    </div>
                    <t t-if="o.supplier_partner_bank_id">
                      <div class="row">
                        <span>Bank Account: </span>
                        <span t-field="o.supplier_partner_bank_id.acc_number"/>
                      </div>
                      <div class="row">
                        <span>Opening Bank: </span>
                        <span t-field="o.supplier_partner_bank_id.bank_id.name"/>
                      </div>
                    </t>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="100%">
            <tr>
              <td class="bg-light"><strong>Information</strong></td>
            </tr>
            <tr>
              <td id="information">
                <div class="container">
                  <div class="pull-right">
                    <div class="row">
                      <div class="col-5 p-0">Date (m/d/Y): </div>
                      <div><span t-field="o.date_order" t-options='{"widget": "date"}' class="m-0"/></div>
                    </div>
                    <div class="row">
                      <div class="col-5 p-0">Scheduled Date (m/d/Y): </div>
                      <div><span t-field="o.date_planned" t-options='{"widget": "date"}' class="m-0"/></div>
                    </div>
                    <div class="row" t-if="o.partner_ref">
                      <div class="col-5 p-0">Your Ref: </div>
                      <div><span t-esc="o.partner_ref" class="m-0"/></div>
                    </div>
                    <div class="row" t-if="o.origin">
                      <div class="col-5 p-0">Source Documents: </div>
                      <div><span t-esc="o.origin" class="m-0"/></div>
                    </div>
                    <div t-if="o.incoterm_id" class="row">
                      <div class="col-5 p-0">Incoterms: </div>
                      <div><span t-field="o.incoterm_id" class="m-0"/></div>
                    </div>
                    <div t-if="o.payment_term_id" class="row">
                      <div class="col-5 p-0">Payment Term: </div>
                      <div><span t-field="o.payment_term_id" class="m-0"/></div>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>          
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="90%">
            <tr>
              <td class="bg-light"><strong>Purchaser/Invoicing Address</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div class="row">
                    <div t-field="o.company_id.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                  </div>
                  <div class="row">
                    <span>Contact: </span>
                    <span t-field="o.user_id.partner_id.name"/>
                  </div>
                  <div class="row" t-if="o.company_id.partner_id.vat">
                    <span>
                      <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"/>
                      <t t-if="not o.company_id.country_id.vat_label">Tax ID: </t>
                    </span>
                    <span t-field="o.company_id.partner_id.vat"/>
                  </div>
                  <t t-if="o.company_id.partner_id.bank_ids">
                    <div class="row">
                      <span>Bank Account: </span>
                      <t t-if="o.payment_mode_id">
                        <span t-if="o.payment_mode_id.bank_account_link == 'fixed'" t-field="o.payment_mode_id.fixed_journal_id.bank_account_id"/>
                        <span t-else=""><t t-esc="o.payment_mode_id.variable_journal_ids[0].bank_account_id.name"/></span>
                      </t>
                      <t t-else="">
                        <span><t t-esc="o.company_id.partner_id.bank_ids[0].acc_number"/></span>
                      </t>
                    </div>
                    <div class="row">
                      <span>Opening Bank: </span>
                      <t t-if="o.payment_mode_id">
                        <span t-if="o.payment_mode_id.bank_account_link == 'fixed'" t-field="o.payment_mode_id.fixed_journal_id.bank_account_id"/>
                        <span t-else=""><t t-esc="o.payment_mode_id.variable_journal_ids[0].bank_id.name"/></span>
                      </t>
                      <t t-else="">
                        <span><t t-esc="o.company_id.partner_id.bank_ids[0].bank_id.name"/></span>
                      </t>
                    </div>
                  </t>
                </div>
              </td>
            </tr>
          </table>          
        </div>
      </div>
      <div class="clearfix"/>
    </xpath>    
    <xpath expr="//t[@t-set='address']" position="replace"/>
    <xpath expr="//div[@class='page']/h2[4]" position="replace"/>
    <xpath expr="//div[@class='page']/h2[3]" position="replace"/>
    <xpath expr="//div[@class='page']/h2[2]" position="replace"/>
    <xpath expr="//div[@class='page']/h2[1]" position="replace"/>
    <xpath expr="//div[@id='informations']" position="replace"/>
    
    <xpath expr="//span[@t-field='line.date_planned']" position="attributes">
      <attribute name="t-options">{"widget": "date"}</attribute>
    </xpath>
    <xpath expr="//span[@t-field='line.date_planned']/.." position="attributes">
      <attribute name="class" add="align-top text-nowrap" separator=" "/>
    </xpath>
    <xpath expr="//span[@t-field='line.product_qty']" position="replace">
      <span t-esc="int(float(line.product_qty))"/>
    </xpath>
    <xpath expr="//thead/tr" position="attributes">
      <attribute name="class" add="text-nowrap" separator=" "/>
    </xpath>
  </template>
</odoo>
