<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="external_layout_purchase">
    <div class="header" t-att-style="report_header_style">
      <div class="o_background_header">
        <div class="float-right">
          <h3 class="mt0 text-right" t-field="company.report_header"/>
        </div>
        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-left" alt="Logo" height="50px;"/>
        <div class="float-left" t-if="company.report_header_name">
          <span style="font-family: 'Prompt' sans-serif; font-weight: 200; font-size: 30px; whitespace: nowrap;" t-field="company.report_header_name"/>
        </div>
        <div class="float-right">
          <h2 class="text-right" t-if="o.state == 'draft'">REQUEST FOR QUOTATION <br/><span t-field="o.name"/></h2>
          <h2 class="text-right" t-if="o.state in ['sent', 'to approve']">PURCHASE ORDER <br/><span t-field="o.name"/></h2>
          <h2 class="text-right" t-if="o.state in ['purchase', 'done']">PURCHASE ORDER (DONE) <br/><span t-field="o.name"/></h2>
          <h2 class="text-right" t-if="o.state == 'cancel'"> PURCHASE ORDER (CANCELLED) <br/><span t-field="o.name"/></h2>
        </div>
        <div class="clearfix mb8"/>
      </div>
    </div>

    <div class="article o_report_layout_background" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
      <t t-raw="0"/>
    </div>

    <div class="footer o_background_footer">
      <div class="text-center">
        <div t-if="report_type == 'pdf'" class="text-muted">
          Page:
          <span class="page"/>
          of
          <span class="topage"/>
        </div>
      </div>
    </div>
  </template>
  <template id="external_layout">
    <t t-if="not o" t-set="o" t-value="doc"/>
    <t t-if="not company">
      <!-- Multicompany -->
      <t t-if="company_id">
        <t t-set="company" t-value="company_id"/>
      </t>
      <t t-elif="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id.sudo()"/>
      </t>
      <t t-else="else">
        <t t-set="company" t-value="res_company"/>
      </t>
    </t>
    <t t-call="purchase_views_extension.external_layout_purchase"><t t-raw="0"/></t>
  </template>

  <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
    <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
      <attribute name="t-call">purchase_views_extension.external_layout</attribute>
    </xpath>
    <xpath expr="//t[@t-set='o']" position="after">
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td><strong>Seller</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div class="row" id="seller">
                    <div t-field="o.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
                  </div>
                  <div t-if="o.partner_ref" class="row">
                    <span>Your Ref:&#160;</span>
                    <div t-field="o.partner_ref"/>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td><strong>Information</strong></td>
            </tr>
            <tr>
              <td id="information">
                <div class="container">
                  <div class="row">
                    <span>Date:&#160;</span>
                    <p t-field="o.date_order" class="m-0" t-options='{"widget": "date"}'/>
                  </div>
                  <div class="row">
                    <span>Company:&#160;</span>
                    <p t-field="o.company_id" class="m-0"/>
                  </div>
                  <div class="row">
                    <span>Buyer:&#160;</span>
                    <p t-field="o.user_id" class="m-0"/>
                  </div>
                  <div t-if="o.user_id.phone" class="row">
                    <span>Phone:&#160;</span>
                    <p t-field="o.user_id.phone" class="m-0"/>
                  </div>
                  <div t-if="o.user_id.email" class="row">
                    <span>Phone:&#160;</span>
                    <p t-field="o.user_id.email" class="m-0"/>
                  </div>
                  <div t-if="o.incoterm_id" class="row">
                    <span>INCOTERMS:&#160;</span>
                    <p t-field="o.incoterm_id.code" class="m-0"/>
                  </div>
                  <div t-if="o.payment_term_id" class="row">
                    <span>Payment Term:&#160;</span>
                    <p t-field="o.payment_term_id" class="m-0"/>
                  </div>
                </div>
              </td>
            </tr>
          </table>          
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td><strong>Shiping Address</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div class="row">
                    <t t-if="o.dest_address_id">
                      <div t-field="o.dest_address_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
                    </t>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td><strong>Invoicing Address</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div class="row">
                    <div t-field="o.company_id.partner_id.name"/>
                  </div>
                  <div class="row">
                    <div t-field="o.company_id.partner_id"
                         t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                  </div>
                </div>
              </td>
            </tr>
          </table>          
        </div>
      </div>    </xpath>
    <xpath expr="//t[@t-set='address']" position="attributes">
      <attribute name="t-att-style">'display: none;'</attribute>
    </xpath>
    <xpath expr="//div[@class='page']/h2" position="replace"/>
    <xpath expr="//div[@id='informations']" position="replace"/>
  </template>
</odoo>
