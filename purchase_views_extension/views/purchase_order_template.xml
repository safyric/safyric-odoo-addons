<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
    <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
      <attribute name="t-call">purchase_views_extension.external_layout</attribute>
    </xpath>
    <xpath expr="//t[@t-set='o']" position="after">
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Seller</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div id="seller">
                    <div class="row">
                      <span t-field="o.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row" t-if="o.partner_id.vat">
                      <span>
                        <t if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"/>
                        <t if="not o.company_id.country_id.vat_label">税号</t>: &#160;
                      </span>
                      <p t-field="o.partner_id.vat"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="90%">
            <tr>
              <td class="bg-light"><strong>Information</strong></td>
            </tr>
            <tr>
              <td id="information">
                <div class="container">
                  <div class="pull-right">
                    <div class="row">
                      <span>Date:&#160;</span>
                      <span t-field="o.date_order" t-options='{"widget": "date"}' class="m-0"/>
                    </div>
                    <div class="row" t-if="o.partner_ref">
                      <span>Your Ref:&#160;</span>
                      <span t-esc="o.partner_ref" class="m-0"/>
                    </div>
                    <div class="row">
                      <span>Company:&#160;</span>
                      <span t-field="o.company_id" class="m-0"/>
                    </div>
                    <div class="row">
                      <span>Buyer:&#160;</span>
                      <span t-field="o.user_id.partner_id.name" class="m-0"/>
                    </div>
                    <div t-if="o.user_id.partner_id.phone" class="row">
                      <span>Phone:&#160;</span>
                      <span t-field="o.user_id.partner_id.phone" class="m-0"/>
                    </div>
                    <div t-if="o.user_id.partner_id.email" class="row">
                      <span>Email:&#160;</span>
                      <span t-field="o.user_id.partner_id.email" class="m-0"/>
                    </div>
                    <div t-if="o.incoterm_id" class="row">
                      <span>INCOTERMS:&#160;</span>
                      <span t-field="o.incoterm_id.code" class="m-0"/>
                    </div>
                    <div t-if="o.payment_term_id" class="row">
                      <span>Payment Term:&#160;</span>
                      <span t-field="o.payment_term_id" class="m-0"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>          
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Shipping Address</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div class="row">
                    <t t-if="o.dest_address_id">
                      <div t-field="o.dest_address_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
                    </t>
                    <t t-else="">
                      <div t-if="o.picking_type_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                      </div>
                    </t>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="90%">
            <tr>
              <td class="bg-light"><strong>Invoicing Address</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div class="row">
                    <div t-field="o.company_id.partner_id.name"/>
                  </div>
                  <div class="row">
                    <div t-field="o.company_id.partner_id"
                         t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                  </div>
                  <div class="row" t-if="o.company_id.partner_id.vat">
                    <span>
                      <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"/>
                      <t t-if="not o.company_id.country_id.vat_label">税号</t>:&#160;
                    </span>
                    <p t-field="o.company_id.partner_id.vat"/>
                  </div>
                </div>
              </td>
            </tr>
          </table>          
        </div>
      </div>
      <div class="clearfix"/>
    </xpath>    
    <xpath expr="//t[@t-set='address']" position="attributes">
      <attribute name="t-att-style">'display: none;'</attribute>
    </xpath>
    <xpath expr="//div[@class='page']/h2[4]" position="replace"/>
    <xpath expr="//div[@class='page']/h2[3]" position="replace"/>
    <xpath expr="//div[@class='page']/h2[2]" position="replace"/>
    <xpath expr="//div[@class='page']/h2[1]" position="replace"/>
    <xpath expr="//div[@id='informations']" position="replace"/>
    
    <xpath expr="//span[@t-field='line.date_planned']" position="attributes">
      <attribute name="t-options">{"widget": "date"}</attribute>
    </xpath>
    <xpath expr="//span[@t-field='line.product_qty']" position="replace">
      <span t-esc="int(float(line.product_qty))"/>
    </xpath>
  </template>
</odoo>
