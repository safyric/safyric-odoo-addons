<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="layout_purchasequotation" inherit_id="web.external_layout_background" primary="True">
    <xpath expr="//img" position="after">
      <div class="float-right">
        <h3 class="text-right" t-if="o.state in ['draft', 'sent', 'to approve']">RFQ</h3>
        <h3 class="text-right" t-if="o.state in ['purchase', 'done']">RFQ (DONE)</h3>
        <h3 class="text-right" t-if="o.state == 'cancel'"> RFQ (CANCELLED)</h3>
        <h3 class="text-right text-muted"><span t-field="o.name"/></h3>
      </div>
    </xpath>
  </template>

  <template id="layout_purchaseorder" inherit_id="web.external_layout_background" primary="True">
    <xpath expr="//img" position="after">
      <div class="float-right">
        <div class="float-right">
          <h3 class="text-right" t-if="o.state in ['draft', 'sent', 'to approve']">PURCHASE ORDER (DRAFT)</h3>
          <h3 class="text-right" t-if="o.state in ['purchase', 'done']">PURCHASE ORDER</h3>
          <h3 class="text-right" t-if="o.state == 'cancel'"> PURCHASE ORDER (CANCELLED)</h3>
          <h3 class="text-right text-muted"><span t-field="o.name"/></h3>
        </div>
      </div>
    </xpath>
  </template>

  <template id="external_layout_purchasequotation">
    <t t-if="not o" t-set="o" t-value="doc"/>
    <t t-if="not company">
      <!-- Multicompany -->
      <t t-if="company_id">
        <t t-set="company" t-value="company_id"/>
      </t>
      <t t-elif="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id.sudo()"/>
      </t>
      <t t-else="else">
        <t t-set="company" t-value="res_company"/>
      </t>
    </t>
    <t t-call="purchase_views_extension.layout_purchasequotation"><t t-raw="0"/></t>
  </template>

  <template id="external_layout_purchaseorder">
    <t t-if="not o" t-set="o" t-value="doc"/>
    <t t-if="not company">
      <!-- Multicompany -->
      <t t-if="company_id">
        <t t-set="company" t-value="company_id"/>
      </t>
      <t t-elif="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id.sudo()"/>
      </t>
      <t t-else="else">
        <t t-set="company" t-value="res_company"/>
      </t>
    </t>
    <t t-call="purchase_views_extension.layout_purchaseorder"><t t-raw="0"/></t>
  </template>
</odoo>
