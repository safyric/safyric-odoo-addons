<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
    <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
      <attribute name="t-call">sale_views_extension.external_layout</attribute>
    </xpath>

    <xpath expr="//t[@t-set='address']" position="replace"/>

    <xpath expr="//t[@t-set='information_block']" position="replace"/>

    <xpath expr="//div[hasclass('page')]//h2" position="replace"/>

    <xpath expr="//div[hasclass('page')]//div[@id='informations']" position="replace"/>

    <xpath expr="//t[@t-set='doc']" position="after">
      <div class="row">
        <div class="col-6" t-if="env.context.get('proforma', False) or is_pro_forma">
          <table class="table-sm border-black pull-right" width="100%" id="invoicing">
            <tr>
              <td class="bg-light"><strong>Invoicing Address</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <t t-if="doc.partner_invoice_id.parent_id">
                    <div class="row">
                      <div t-field="doc.partner_invoice_id.parent_id"/>
                    </div>
                    <div class="row">
                      <span t-field="doc.partner_invoice_id"
                           t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row" t-if="doc.partner_invoice_id.vat">
                      <span>
                        <t t-if="doc.country_id.vat_label" t-esc="doc.partner_invoice_id.country_id.vat_label"/>
                        <t t-if="not doc.partner_invoice_id.country_id.vat_label">Tax ID</t>:&#160;
                      </span>
                      <p t-field="doc.partner_invoice_id.partner_id.vat"/>
                    </div>
                    <div class="row" t-if="doc.partner_invoice_id.name">
                      <span>Contact: </span><span t-field="doc.partner_invoice_id.name"/>
                      <t t-if="doc.partner_invoice_id.mobile"><i class="fa fa-mobile"/><span t-field="doc.partner_invoice_id.mobile" class="m-0"/></t>
                    </div>
                    <div class="row" t-if="doc.partner_invoice_id.email">
                      <i class="fa fa-envelope-o fa-fw"/><span t-field="doc.partner_invoice_id.email"/>
                    </div>
                  </t>
                  <t t-else="">
                    <div class="row">
                      <div t-field="doc.partner_invoice_id"/>
                    </div>
                    <div class="row">
                      <span t-field="doc.partner_invoice_id"
                            t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row" t-if="doc.partner_invoice_id.vat">
                      <span>
                        <t t-if="doc.country_id.vat_label" t-esc="doc.partner_invoice_id.country_id.vat_label"/>
                        <span t-if="not doc.partner_invoice_id.country_id.vat_label">Tax ID: </span>
                      </span>
                      <p t-field="doc.partner_invoice_id.partner_id.vat"/>
                    </div>
                  </t>
                </div>
              </td>
            </tr>
          </table>     
        </div>
        <div class="col-6" t-else="">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Customer</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div id="customer">
                    <t t-if="doc.partner_id.parent_id">
                      <div class="row">
                        <span t-field="doc.partner_id.parent_id" 
                              t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                      </div>
                      <div class="row">
                        <span>Contact: </span><span t-field="doc.partner_id.name"/>
                        <t t-if="doc.partner_id.mobile"><i class="fa fa-mobile"/><span t-field="doc.partner_id.mobile" class="m-0"/></t>
                      </div>
                    </t>
                    <t t-else="">
                      <div class="row">
                        <span t-field="doc.partner_id" 
                              t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                      </div>
                    </t>
                    <div class="row" t-if="doc.partner_id.email">
                      <i class="fa fa-envelope-o fa-fw"/><span t-if="doc.partner_id.email" t-field="doc.partner_id.email"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6" id="informations">
          <table class="table-sm border-black pull-right" width="100%">
            <tr>
              <td class="bg-light"><strong>Information</strong></td>
            </tr>
            <tr>
              <td id="information">
                <div class="container">
                  <div class="pull-right">
                    <div t-if="doc.date_order and doc.state in ['draft','sent']" class="row" >
                      <t t-if="env.context.get('proforma', False) or is_pro_forma">
                        <div class="col-5 p-0">Invoice Date (m/d/Y): </div>
                        <div><span t-esc="doc.date_order.strftime('%m/%d/%Y')" class="m-0"/></div>                        
                      </t>
                      <t t-else="">
                        <div class="col-5 p-0">Quotation Date (m/d/Y): </div>
                        <div><span t-esc="doc.date_order.strftime('%m/%d/%Y')" class="m-0"/></div>                        
                      </t>
                    </div>
                    <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']" class="row" >
                      <div class="col-5 p-0">Order Date (m/d/Y): </div>
                      <div><span t-esc="doc.confirmation_date.strftime('%m/%d/%Y')" class="m-0"/></div>
                    </div>
                    <div t-if="doc.validity_date and not (env.context.get('proforma', False) or is_pro_forma)" class="row">
                      <div class="col-5 p-0">Expiration Date (m/d/Y): </div>
                      <div><span t-field="doc.validity_date" widget="date" t-field-options='{"format": "mm/dd/yyyy"}' class="m-0"/></div>
                    </div>
                    <div class="row" t-if="doc.client_order_ref">
                      <div class="col-5 p-0" t-if="doc.date_order and doc.state in ['draft','sent']">Your Reference: </div>
                      <div class="col-5 p-0" t-if="doc.confirmation_date and doc.state not in ['draft','sent']">PO Number: </div>
                      <div class="col-7 p-0"><span t-esc="doc.client_order_ref" class="m-0"/></div>
                    </div>
                    <div t-if="doc.incoterm" class="row">
                      <div class="col-5 p-0">Shipping Terms: </div>
                      <div class="col-7 p-0"><span t-field="doc.incoterm.code" class="m-0"/></div>
                    </div>
                    <div t-if="doc.carrier_id" class="row">
                      <div class="col-5 p-0">Shipping Method: </div>
                      <div class="col-7 p-0"><span t-field="doc.carrier_id" class="m-0"/></div>
                    </div>                    
                    <div t-if="doc.payment_term_id" class="row">
                      <div class="col-5 p-0">Payment Terms: </div>
                      <div class="col-7 p-0"><span t-field="doc.payment_term_id" class="m-0"/></div>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>          
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Shipping Address</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <t t-if="doc.partner_shipping_id.parent_id">
                    <div class="row">                      
                      <span t-field="doc.partner_shipping_id.parent_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row" t-if="doc.partner_shipping_id.name">
                      <span>Contact: </span><span t-field="doc.partner_shipping_id.name"/>
                      <t t-if="doc.partner_id.mobile"><i class="fa fa-mobile"/><span t-field="doc.partner_id.mobile" class="m-0"/></t>
                    </div>
                  </t>
                  <t t-else="">
                    <div class="row">
                      <span t-field="doc.partner_shipping_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                  </t>
                  <div class="row" t-if="doc.partner_shipping_id.email">
                    <i class="fa fa-envelope-o fa-fw"/><span t-if="doc.partner_shipping_id.email" t-field="doc.partner_id.email"/>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="100%">
            <tr>
              <t t-if="env.context.get('proforma', False) or is_pro_forma">
                <td class="bg-light"><strong>Shipper</strong></td>
              </t>
              <t t-else=""><td class="bg-light"><strong>Company</strong></td></t>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <t>
                    <div class="row">
                      <span t-field="doc.company_id.partner_id"
                           t-options='{"widget": "contact", "fields": ["name", "address", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row">
                      <span>Contact: </span><span t-field="doc.user_id.partner_id.name"/>
                    </div>
                  </t>
                </div>
              </td>
            </tr>
          </table>          
        </div>
      </div>
      <div class="clearfix"/>
    </xpath>

    <xpath expr="//thead/tr" position="attributes">
      <attribute name="class" add="align-top text-nowrap" separator=" "/>
    </xpath>
    <xpath expr="//span[@t-field='line.product_uom_qty']" position="replace">
      <span t-esc="int(float(line.product_uom_qty))"/>
    </xpath>
    <xpath expr="//tr[hasclass('o_total')]" position="after">
      <tr class="border-black o_total">
        <td name="td_currency_label"><strong>Currency</strong></td>
        <td name="td_currency" class="text-right">
          <span t-field="doc.pricelist_id.currency_id.name"/>
        </td>
      </tr>
    </xpath>

    <xpath expr="//span[@t-field='line.name']" position="before">
      <span t-if="env.context.get('proforma', False) or is_pro_forma"><span t-field="line.product_id"/><br /></span>
    </xpath>

    <xpath expr="//span[@t-field='line.name']" position="attributes">
      <attribute name="t-else">'""'</attribute>
    </xpath>
  </template>
</odoo>

