<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_case_form_view_oppor_extend" model="ir.ui.view">
        <field name="name">crm.lead.oppor.inherited.crm</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='%(sale_crm.sale_action_quotations_new)d']" position="attributes">
                <attribute name="context">
                    {'search_default_partner_id': partner_id,
                    'default_client_order_ref': name,
                    'default_partner_id': partner_id,
                    'default_team_id': team_id,
                    'default_tag_ids': tag_ids,
                    'default_campaign_id': campaign_id,
                    'default_medium_id': medium_id,
                    'default_origin': name,
                    'default_source_id': source_id}
                </attribute>
            </xpath>
        </field>
    </record>    
</odoo>
