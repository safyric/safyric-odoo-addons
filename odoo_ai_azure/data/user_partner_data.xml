<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="odoo_ai_azure.partner_ai" model="res.partner">
            <field name="name">Azure AI</field>
	    <field name="company_id" ref="base.main_company"/>
	    <field name="active" eval="True"/>
            <field name="image" type="base64" file="odoo_ai_azure/static/description/chatgpt.png"/>
        </record>

        <record id="odoo_ai_azure.user_ai" model="res.users"> 
	    <field name="login">azure</field>
	    <field name="email">azure@example</field>
	    <field name="partner_id" ref="odoo_ai_azure.partner_ai"/>
	    <field name="company_id" ref="base.main_company"/>
	    <field name="company_ids" eval="[(4, ref('base.group_user'))]"/>
	    <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
	    <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
