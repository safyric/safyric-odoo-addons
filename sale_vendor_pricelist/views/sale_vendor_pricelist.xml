<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_vendor_pricelist_form" model="ir.ui.view">
            <field name="name">sale.vendor.pricelist.form</field>
            <field name="model">sale.vendor.pricelist</field>
            <field name="arch" type="xml">
		<form string="Vendor Pricelist">
		    <header>
		    </header>
		    <sheet>
			<div class="oe_button_box" name="button_box">
			</div>
			<div class="oe_title">
			    <label for="name" string="Model Number"/>
			    <h1>
				<field name="name"/>
			    </h1>
			</div>
			<group name="top">
			    <field name="quantity"/>
			    <field name="unit_price"/>
			    <field name="manufacturer"/>
			    <field name="date"/>
			    <field name="description"/>
			    <field name="notes"/>
			</group>
		    </sheet>
		</form>
            </field>
        </record>

        <record id="view_vendor_pricelist_tree" model="ir.ui.view">
            <field name="name">sale.vendor.pricelist.tree</field>
            <field name="model">sale.vendor.pricelist</field>
            <field name="arch" type="xml">
                <tree string="Vendor Pricelist">
                    <field name="name"/>
                    <field name="quantity"/>
                    <field name="unit_price" avg="Average"/>
		    <field name="manufacturer"/>
		    <field name="date"/>
                    <field name="description"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>


	<record id="action_vendor_pricelist" model="ir.actions.act_window">
	    <field name="name">Vendor Pricelist</field>
	    <field name="res_model">sale.vendor.pricelist</field>
	    <field name="type">ir.actions.act_window</field>
	    <field name="view_type">form</field>
	    <field name="view_mode">tree,form</field>
	</record>

	<menuitem id="menu_vendor_pricelist"
	    parent="sale.product_menu_catalog"
	    sequence="50"
	    action="action_vendor_pricelist"
	/>

</odoo>
