<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
    <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
      <attribute name="t-call">stock_views_extension.external_layout_deliveryslip</attribute>
    </xpath>
    <xpath expr="//t[@name='partner_header']" position="attributes">
      <attribute name="t-att-style">display: none;</attribute>
    </xpath>
    <xpath expr="//t[@t-set='partner']" position="after">
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Customer</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div id="seller">
                    <div class="row">
                      <span t-field="o.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row" t-if="o.partner_id.email">
                        <i class="fa fa-envelope-o fa-fw"/><span t-field="o.partner_id.email"/>
                    </div>
                    <div class="row" t-if="o.partner_id.vat">
                      <span>
                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"/>
                        <t t-if="not o.company_id.country_id.vat_label"><span>Tax ID</span></t><span>: </span>
                      </span>
                      <p t-field="o.partner_id.vat" class="m-0"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="100%">
            <tr>
              <td class="bg-light"><strong>Information</strong></td>
            </tr>
            <tr>
              <td id="information">
                <div class="container">
                  <div class="pull-right">
                    <div class="row">
                      <span>Date: </span>
                      <span t-field="o.date_order" class="m-0" t-options='{"widget": "date"}'/>
                    </div>
                    <div class="row">
                      <span>Company: </span>
                      <span t-field="o.company_id" class="m-0"/>
                    </div>
                    <div class="row">
                      <span>Buyer: </span>
                      <span t-field="o.user_id.partner_id.name" class="m-0"/>
                      <t t-if="o.user_id.partner_id.mobile">
                        <i class="fa fa-mobile"/><span t-field="o.user_id.partner_id.mobile" class="m-0"/>
                      </t>
                    </div>
                    <div t-if="o.user_id.phone" class="row">
                      <i class="fa fa-phone"/>
                      <span t-field="o.user_id.phone" class="m-0"/>
                    </div>
                    <div t-if="o.user_id.email" class="row">
                      <i class="fa fa-envelope-o fa-fw"/>
                      <span t-field="o.user_id.email" class="m-0"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>          
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Shipping Address</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <t t-if="doc.partner_shipping_id.parent_id">
                    <div class="row">                      
                      <div t-field="doc.partner_shipping_id.parent_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row">
                      <span>Contact: </span><span t-field="doc.partner_shipping_id.name"/>
                      <t t-if="doc.partner_id.mobile"><i class="fa fa-mobile"/><span t-field="doc.partner_id.mobile" class="m-0"/></t>
                    </div>
                  </t>
                  <t t-else="">
                    <div class="row">
                      <div t-field="doc.partner_shipping_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                  </t>
                  <div class="row" t-if="doc.partner_shipping_id.email">
                    <i class="fa fa-envelope-o fa-fw"/><span t-if="doc.partner_shipping_id.email" t-field="doc.partner_id.email"/>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="100%">
            <tr>
              <td class="bg-light"><strong>SHIPPING NOTES</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                </div>
              </td>
            </tr>
          </table>          
        </div>
      </div>
      <div class="clearfix"/>
    </xpath>
  </template>
</odoo>
