<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
    <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
      <attribute name="t-call">stock_views_extension.external_layout_deliveryslip</attribute>
    </xpath>
    <xpath expr="//t[@name='partner_header']" position="attributes">
      <attribute name="t-att-style">display: none;</attribute>
    </xpath>
    <xpath expr="//t[@t-set='partner']" position="after">
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Customer</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div id="seller">
                    <div class="row">
                      <span t-field="o.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row" t-if="o.partner_id.email">
                      <i class="fa fa-envelope-o fa-fw"/><span t-field="o.partner_id.email"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="100%">
            <tr>
              <td class="bg-light"><strong>Information</strong></td>
            </tr>
            <tr>
              <td id="information">
                <div class="container">
                  <div class="pull-right">
                    <div class="row">
                      <span>Date: </span>
                      <t t-if="o.state == 'done'">
                        <span t-field="o.date_done" class="m-0" t-options='{"widget": "date"}'/>
                      </t>
                      <t t-if="o.state != 'done'">
                        <span t-field="o.scheduled_date" class="m-0" t-options='{"widget": "date"}'/>
                      </t>
                    </div>
                    <div class="row">
                      <span>Company: </span>
                      <span t-field="o.company_id" class="m-0"/>
                    </div>
                    <div class="row">
                      <span>Sales Representative: </span>
                      <span t-field="o.sale_id.user_id.partner_id.name" class="m-0"/>
                      <t t-if="o.sale_id.user_id.partner_id.mobile">
                        <i class="fa fa-mobile"/><span t-field="o.sale_id.user_id.partner_id.mobile" class="m-0"/>
                      </t>
                    </div>
                    <div t-if="o.sale_id.user_id.phone" class="row">
                      <i class="fa fa-phone"/>
                      <span t-field="o.sale_id.user_id.phone" class="m-0"/>
                    </div>
                    <div t-if="o.sale_id.user_id.email" class="row">
                      <i class="fa fa-envelope-o fa-fw"/>
                      <span t-field="o.sale_id.user_id.email" class="m-0"/>
                    </div>
                    <div t-if="o.origin" class="row">
                      <span>Source Document: </span>
                      <span t-field="o.origin"/>
                    </div>
                    <div t-if="o.client_order_ref" class="row">
                      <span>Customer Reference: </span>
                      <span t-field="o.client_order_ref"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Consignee</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <t t-if="o.sale_id.partner_shipping_id.parent_id">
                    <div class="row">
                      <div t-field="o.sale_id.partner_shipping_id.parent_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row">
                      <span>Contact: </span><span t-field="o.sale_id.partner_shipping_id.name"/>
                      <t t-if="o.sale_id.partner_shipping_id.mobile"><i class="fa fa-mobile"/><span t-field="o.partner_id.mobile" class="m-0"/></t>
                    </div>
                  </t>
                  <t t-else="">
                    <div class="row">
                      <div t-field="o.sale_id.partner_shipping_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                  </t>
                  <div class="row" t-if="o.sale_id.partner_shipping_id.email">
                    <i class="fa fa-envelope-o fa-fw"/><span t-field="o.sale_id.partner_shipping_id.email"/>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="100%">
            <tr>
              <td class="bg-light"><strong>Shipment Information</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container" name="shipment">
                  <t t-if="o.note">
                    <div class="row">
                      <strong><p t-field="o.note"/></strong>
                    </div>
                  </t>
                </div>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="clearfix"/>
    </xpath>
    <xpath expr="//h2[1]" position="attributes">
      <attribute name="style">display:none</attribute>
    </xpath>
    <xpath expr="//table[@class='table table-sm']" position="attributes">
      <attribute name="style">display:none</attribute>
    </xpath>
    <xpath expr="//table[hasclass('mt48')][2]/thead/tr" position="attributes">
      <attribute name="class">text-nowrap</attribute>
    </xpath>
    <xpath expr="//table[hasclass('mt48')][1]/thead/tr" position="attributes">
      <attribute name="class">text-nowrap</attribute>
    </xpath>
    <xpath expr="//span[@t-field='move.product_uom_qty']" position="replace">
      <span t-esc="int(float(move.product_uom_qty))"/>
    </xpath>
    <xpath expr="//span[@t-field='move_line.qty_done']" position="replace">
      <span t-esc="int(float(move_line.qty_done))"/>
    </xpath>
    <xpath expr="//div[hasclass('justify-content-end')]" position="attributes">
      <attribute name="style">display:none</attribute>
    </xpath>
    <xpath expr="//t[@t-set='lines']" position="after">
      <t t-set="p_pack" t-value="[]"/>
      <t t-set="p_uom" t-value="[]"/>
      <t t-set="p_count" t-value="0"/>
      <t t-foreach="lines.move_line_ids" t-as="move">
        <t t-set="p_pack" t-value="p_pack+[move.result_package_id]"/>
        <t t-set="p_uom" t-value="move.move_line_ids.product_uom_id[0]"/>
      </t>
      <t t-foreach="sorted(set(p_pack), key=lambda k: k.name)" t-as="p">
        <t t-set="p_dim" t-if="p.packaging_id"
           t-value="' x '.join([str(p.packaging_id.length),str(p.packaging_id.width),str(p.packaging_id.height)])"/>
        <t t-set="p_count" t-value="p_index+1"/>
        <tr>
          <td t-if="p" colspan="999" class="bg-dark">
            <div class="row">
              <div class="col-3"><strong><span t-field="p.name"/></strong></div>
              <div class="col-3 text-right">
                <strong><span t-esc="p_dim"/> mm</strong>
              </div>
              <div class="col-3 text-right">
                <strong><span t-esc="'%.2f'%(p.packaging_id.volume)"/> CBM</strong>
              </div>
              <div class="col-3 text-right">
                <strong><span t-esc="p.shipping_weight + p.weight"/>
                <span t-field="o.weight_uom_id"/></strong>
              </div>
            </div>
          </td>
        </tr>
        <t t-set="p_qty" t-value="0"/>
        <t t-foreach="lines" t-as="move" t-if="p.id==move.move_line_ids.result_package_id.id">
          <t t-set="p_qty" t-value="p_qty+move.product_uom_qty"/>
        </t>
        <tr>
          <td colspan="999" class="font-italic mb-3">
            <div  class="bg-light text-muted">
              <div class="float-left"><span t-field="p.name"/><span> Summary: </span></div>
              <div class="float-right"><t t-esc="int(float(p_qty))"/><span> </span><t t-esc="p_uom.name"/></div>
            </div>
          </td>
        </tr>
      </t>
      <tr>
        <td colspan="999" class="bg-success"><span>Total <strong><t t-esc="p_count"/></strong> Package(s)</span></td>
      </tr>
    </xpath>
    <xpath expr="//t[@t-as='p']//t[@t-as='move']" position="inside">
      <xpath expr="//tr[@t-as='move']" position="move"/>
    </xpath>
    <xpath expr="//tr[@t-as='move']" position="attributes">
      <attribute name="t-foreach"/>
      <attribute name="t-as"/>
    </xpath>    
    <xpath expr="//table[@class='table table-sm mt48'][2]/tbody" position="inside">
      <t t-set="pd_pack" t-value="[]"/>
      <t t-set="pd_uom" t-value="[]"/>
      <t t-foreach="o.move_line_ids" t-as="move_line">
        <t t-set="pd_pack" t-value="pd_pack+[move_line.result_package_id]"/>
        <t t-set="pd_uom" t-value="move_line.product_uom_id[0]"/>
      </t>
      <t t-foreach="sorted(set(pd_pack), key=lambda k: k.name)" t-as="pd">
        <t t-set="pd_dim" t-if="pd.packaging_id" 
           t-value="' x '.join([str(pd.packaging_id.length),str(pd.packaging_id.width),str(pd.packaging_id.height)])"/>
        <tr>
          <td t-if="pd" colspan="999" class="bg-dark">
            <div class="row">
              <div class="col-3"><strong><span t-field="pd.name"/></strong></div>
              <div class="col-3 text-right">
                <strong><span t-esc="pd_dim"/> mm</strong>
              </div>
              <div class="col-3 text-right">
                <strong><span t-esc="'%.2f'%(pd.packaging_id.volume)"/> CBM</strong>
              </div>
              <div class="col-3 text-right">
                <strong>
                  <span t-esc="pd.shipping_weight + pd.weight"/>
                  <span t-field="o.weight_uom_id"/>
                </strong>
              </div>
            </div>
          </td>
        </tr>
        <t t-set="pd_qty" t-value="0"/>
        <t t-foreach="o.move_line_ids" t-as="move_line" t-if="pd.id==move_line.result_package_id.id">
          <t t-set="pd_qty" t-value="pd_qty+move_line.qty_done"/>
        </t>
        <tr>
          <td colspan="999" class="font-italic mb-3">
            <div  class="bg-light text-muted">
              <div class="float-left"><span t-field="pd.name"/><span> Summary: </span></div>
              <div class="float-right"><t t-esc="int(float(pd_qty))"/><span> </span><t t-esc="pd_uom.name"/></div>
            </div>
          </td>
        </tr>
      </t>
      <tr>
        <td colspan="999" class="bg-success">
          <span>Total <strong><t t-esc="pd_count"/></strong> Package(s)</span>
        </td>
      </tr>
    </xpath>
    <xpath expr="//t[@t-as='pd']/t[@t-as='move_line']" position="inside">
      <xpath expr="//tr[@t-as='move_line']" position="move"/>
    </xpath>
    <xpath expr="//tr[@t-as='move_line']" position="attributes">
      <attribute name="t-foreach"/>
      <attribute name="t-as"/>
    </xpath>
  </template>
</odoo>
