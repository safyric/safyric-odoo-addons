<odoo>
    <template id="report_delivery_document2" inherit_id="stock.report_delivery_document">
        <xpath expr="//t[@t-if='o.note']" position="before">
          <div class="row" t-if="o.picking_type_id.code == 'outgoing' and o.carrier_id">
            <span>Carrier: </span><span t-field="o.carrier_id"/>
          </div>
          <div class="row" t-if="o.carrier_tracking_ref">
            <span>Tracking Number: </span><span t-field="o.carrier_tracking_ref"/>
          </div>
          <div class="row" t-if="o.shipping_weight">
            <span>Shipping Weight: </span><span t-field="o.shipping_weight"/><span t-field="o.weight_uom_id"/>
          </div>
          <div class="row" t-if="o.volume > 0">
            <span>Volume: </span><span t-field="o.volume"/>m3
          </div>
        </xpath>
    </template>
</odoo>
