<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
    <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
      <attribute name="t-call">stock_views_extension.external_layout_deliveryslip</attribute>
    </xpath>
    <xpath expr="//t[@name='partner_header']" position="replace"/>
    <xpath expr="//t[@t-set='partner']" position="after">
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Customer</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div id="seller">
                    <div class="row">
                      <span t-field="o.sale_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row" t-if="o.sale_id.partner_id.email">
                      <i class="fa fa-envelope-o fa-fw"/><span t-field="o.sale_id.partner_id.email"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="100%">
            <tr>
              <td class="bg-light"><strong>Information</strong></td>
            </tr>
            <tr>
              <td id="information">
                <div class="container">
                  <div class="pull-right">
                    <div class="row">
                      <span>Date: </span>
                      <t t-if="o.state == 'done'">
                        <span t-field="o.date_done" class="m-0" t-options='{"widget": "date"}'/>
                      </t>
                      <t t-if="o.state != 'done'">
                        <span t-field="o.scheduled_date" class="m-0" t-options='{"widget": "date"}'/>
                      </t>
                    </div>
                    <div class="row">
                      <span>Shipper: </span>
                      <span t-field="o.company_id" class="m-0"/>
                    </div>
                    <div class="row">
                      <span>Shipper Contact: </span>
                      <span t-field="o.sale_id.user_id.partner_id.name" class="m-0"/>
                    </div>
                    <div t-if="o.origin" class="row">
                      <span>Source Document: </span>
                      <span t-field="o.origin"/>
                    </div>
                    <div t-else="" class="row">
                      <span>Sales Order: </span>
                      <span t-field="o.sale_id.name"/>
                    </div>
                    <div t-if="o.client_order_ref" class="row">
                      <span>Customer Reference: </span>
                      <span t-field="o.client_order_ref"/>
                    </div>
                    <div t-if="o.sale_id.incoterm" class="row">
                      <span>Incoterms: </span>
                      <span t-field="o.sale_id.incoterm"/>
                    </div>                    
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Consignee</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <t t-if="o.partner_id.parent_id">
                    <div class="row">
                      <div t-field="o.partner_id.parent_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row">
                      <span>Contact: </span><span t-field="o.partner_id.name"/>
                      <t t-if="o.partner_id.mobile"><i class="fa fa-mobile"/><span t-field="o.partner_id.mobile" class="m-0"/></t>
                    </div>
                  </t>
                  <t t-else="">
                    <div class="row">
                      <div t-field="o.partner_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                  </t>
                  <div class="row" t-if="o.partner_id.email">
                    <i class="fa fa-envelope-o fa-fw"/><span t-field="o.partner_id.email"/>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <table class="table-sm border-black pull-right" width="100%">
            <tr>
              <td class="bg-light"><strong>Shipment Information</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container" name="shipment">

                </div>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="clearfix"/>
    </xpath>
    <xpath expr="//h2[1]" position="attributes">
      <attribute name="style">display:none</attribute>
    </xpath>
    <xpath expr="//table[@class='table table-sm']" position="attributes">
      <attribute name="style">display:none</attribute>
    </xpath>
    <xpath expr="//table[hasclass('mt48')][2]/thead/tr" position="attributes">
      <attribute name="class">text-nowrap</attribute>
    </xpath>
    <xpath expr="//table[hasclass('mt48')][1]/thead/tr" position="attributes">
      <attribute name="class">text-nowrap</attribute>
    </xpath>
    <xpath expr="//span[@t-field='move.product_uom_qty']" position="replace">
      <span t-esc="int(float(move.product_uom_qty))"/>
    </xpath>
    <xpath expr="//span[@t-field='move_line.qty_done']" position="replace">
      <span t-esc="int(float(move_line.qty_done))"/>
    </xpath>
    <xpath expr="//div[hasclass('justify-content-end')]" position="attributes">
      <attribute name="style">display:none</attribute>
    </xpath>
    <!--<xpath expr="//th[@name='lot_serial']" position="before">
      <th name="hscode">HS Code</th>
    </xpath>-->
    <xpath expr="//table[@class='table table-sm mt48'][2]/tbody" position="inside">
      <t t-set="move_package" t-value="[]"/>
      <t t-set="shipped_qty" t-value="0"/>
      <t t-set="product_uom" t-value="[]"/>
      <t t-foreach="o.move_line_ids" t-as="move_line">
        <t t-set="move_package" t-value="move_package+[move_line.result_package_id]"/>
        <t t-set="shipped_qty" t-value="shipped_qty+move_line.qty_done"/>
        <t t-set="product_uom" t-value="move_line.product_uom_id.name"/>
      </t>
      <t t-set="pkg_qty" t-value="0"/>
      <t t-set="pkg_vol" t-value="0"/>
      <t t-set="pkg_weight" t-value="0"/>
      <t t-foreach="sorted(set(move_package), key=lambda k: k.name)" t-as="package">
        <t t-set="move_dim" t-if="package.packaging_id" t-value="' x '.join([str(package.packaging_id.length),str(package.packaging_id.width),str(package.packaging_id.height)])"/>
        <t t-set="pkg_qty" t-value="package_index+1"/>
        <t t-set="pkg_vol" t-value="pkg_vol+package.packaging_id.volume"/>
        <t t-set="pkg_weight" t-value="pkg_weight+package.shipping_weight"/>
        <tr t-if="package">
          <td colspan="999" class="bg-dark">
            <div class="row">
              <div class="col-3"><strong><span t-esc="package_index+1"/># <span t-field="package.name"/></strong></div>
              <div class="col-4 text-center"><strong t-if="move_dim"><span t-esc="move_dim"/> mm</strong></div>
              <div class="col-2 text-right"><strong t-if="package.packaging_id.volume!=0">Vol.: <span t-esc="package.packaging_id.volume" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 3}"/> M<sup>3</sup></strong></div>
              <div class="col-3 text-right">
                <strong t-if="package.shipping_weight!=0">G.W.: <span t-esc="package.weight+package.shipping_weight" t-options='{"widget": "float", "precision": 2}'/> <span t-field="o.weight_uom_id"/></strong>
              </div>
            </div>
          </td>
        </tr>
        <t t-set="move_move" t-value="[]"/>
        <t t-foreach="o.move_line_ids.filtered(lambda l: l.result_package_id.id==package.id)" t-as="move">
          <t t-set="move_move" t-value="move_move+[move.move_id]"/>
        </t>
        <t t-foreach="sorted(set(move_move), key=lambda k: k.id)" t-as="move_line">
          <t t-set="move_qty" t-value="0"/>
          <t t-set="move_lot" t-value="[]"/>
          <t t-foreach="o.move_line_ids.filtered(lambda x: x.move_id.id==move_line.id and x.result_package_id.id==package.id)" t-as="product">
            <t t-set="move_qty" t-value="move_qty+product.qty_done"/>
            <t t-set="move_lot" t-value="move_lot+[product.lot_id]"/>
          </t>
          <tr>
            <td>
              <span t-field="move_line.sequence"/>
            </td>
            <td>
              <span t-field="move_line.item"/>
            </td>
            <td>
              <span t-field="move_line.product_id"/>
	      <span t-if="move_line.product_id.country_of_origin_id"><br/>Country of Origin: <span t-field="move_line.product_id.country_of_origin_id"/></span>
	      <span t-if="move_line.product_id.hs_code"><br/>H.S. Code: <span t-field="move_line.product_id.hs_code"/></span>
              <p t-if="o.picking_type_code == 'outgoing'">
                <span t-field="move_line.product_id.sudo().description_pickingout"/>
              </p>
              <p t-if="o.picking_type_code == 'incoming'">
                <span t-field="move_line.product_id.sudo().description_pickingin"/>
              </p>
            </td>
            <!--<td><span t-field="move_line.product_id.hs_code"/></td>-->
            <td width="20%" t-if="has_serial_number and o.show_serial" groups="stock.group_lot_on_delivery_slip">
              <t t-foreach="sorted(set(move_lot), key=lambda k: k.name)" t-as="lot">
                <span t-esc="lot.name"/>
              </t>
            </td>
            <td class="text-right text-nowrap">
              <span t-if="o.state=='done'" t-esc="move_qty"/>
              <span t-else="" t-esc="move_line.product_uom_qty"/>
              <span t-field="move_line.product_uom"/>
            </td>
          </tr>
        </t>
      </t>
      <tr>
        <td colspan="999" class="bg-info text-light pt-4 pb-4">
          <div class="container bg-info text-light">
            <div class="row">
              <div class="col-8">
                <div><strong>Packing Summary:</strong></div>
                <div t-if="pkg_qty!=0">Total Packages: <span class="font-italic"><span t-esc="pkg_qty"/> Piece(s)</span></div>
                <div t-if="pkg_vol!=0">Total Volume: <span class="font-italic"><span t-esc="pkg_vol" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 3}"/> M<sup>3</sup></span></div>
                <div t-if="pkg_weight">Total Gross Weight: <span class="font-italic"><span t-esc="o.shipping_weight" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 1}"/> <span t-field="o.weight_uom_id"/></span></div>
                <div t-if="shipped_qty">Total Shipped Quantity: <span class="font-italic"><span t-esc="shipped_qty"/> <span t-esc="product_uom"/></span></div>
              </div>
              <div class="col-4">
                <div t-if="o.note"><strong>Shipping Marks:</strong></div>
                <t t-if="o.note">
                  <span t-field="o.note"/>
                </t>
              </div>
            </div>
          </div>
        </td>
      </tr>
    </xpath>
    <xpath expr="//tr[@t-as='move_line']" position="attributes">
      <attribute name="style">display:none</attribute>
    </xpath>
    <xpath expr="//table[@class='table table-sm mt48'][1]" position="attributes">
      <attribute name="style">display:none</attribute>
    </xpath>
    <xpath expr="//table[@class='table table-sm mt48'][2]" position="attributes">
      <attribute name="t-if"/>
    </xpath>
  </template>
</odoo>
