<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_pickingoperation_document" inherit_id="stock.report_picking" primary="True">
            <xpath expr="//h1[@t-field='o.name']" position="attributes">
                <attribute name="style">display:none</attribute>
            </xpath>
            
            <xpath expr="//t[@t-call='web.html_container']" position="inside">
                <xpath expr="//t[@t-call='web.external_layout']" position="move"/>
            </xpath>
            
            <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
                <attribute name="t-call">stock_views_extension.external_layout_pickingoperation</attribute>
            </xpath>
            <xpath expr="//t[@t-foreach='docs']" position="attributes">
                <attribute name="style">display:none</attribute>
            </xpath>
            
            <xpath expr="//div[hasclass('page')]" position="before">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
            </xpath>
            
            <xpath expr="//p[@t-if='o.sudo().partner_id.vat']" position="attributes">
                <attribute name="style">display:none</attribute>
            </xpath>
            
            <xpath expr="//span[@t-field='o.scheduled_date']" position="attributes">
                <attribute name="t-options">{'widget': 'date'}</attribute>
            </xpath>

            <xpath expr="//t[@t-as='ml']" position="attributes">
                <attribute name="t-foreach">o.move_line_ids.sorted(key=lambda ml: ml.result_package_id.id)</attribute>
            </xpath>

            <xpath expr="//table[@t-if='o.move_line_ids']/tbody" position="inside">
                <xpath expr="//t[@t-as='ml']" position="move"/>
            </xpath>

            <xpath expr="//table[@t-if='o.move_line_ids']//th[1]" position="before">
                <t t-set="has_package" t-value="(move_ids_with_package.result_package_id for move_ids_with_package in o.move_line_ids)"/>
                <th width="15%" t-if="has_package"><strong>Package</strong></th>
            </xpath>

            <xpath expr="//td[@t-if='has_barcode']/t" position="replace">
                <t t-if="product_barcode != ml.product_id.barcode">
                    <span t-if="ml.product_id and ml.product_id.barcode">
                        <img t-if="len(ml.product_id.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', ml.product_id.barcode, 600, 100)" style="width:100%;height:35px" alt="Barcode"/>
                        <img t-elif="len(ml.product_id.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', ml.product_id.barcode, 600, 100)" style="width:100%;height:35px" alt="Barcode"/>
                        <img t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', ml.product_id.barcode, 600, 100)" style="width:100%;height:35px" alt="Barcode"/>
                    </span>
                    <t t-set="product_barcode" t-value="ml.product_id.barcode"/>
                </t>
            </xpath>

            <xpath expr="//table[@t-if='o.move_line_ids']//td[1]" position="before">
                <td t-if="has_package">
                    <t t-if="package != ml.result_package_id">
                        <img t-if="has_package and ml.result_package_id" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', ml.result_package_id.name, 600, 100)" style="width:100%;height:35px;" alt="Barcode"/>
                    </t>
                    <t t-set="package" t-value="ml.result_package_id"/>
                </td>
            </xpath>
        </template>
        
        <template id="report_pickingopeartion">
            <t t-foreach="docs" t-as="o">
                <t t-call="stock_views_extension.report_pickingoperation_document" t-lang="o.partner_id.lang"/>
            </t>
        </template>
        
        <report 
            string="Picking Operations"
            id="action_report_picking"
            model="stock.picking"
            report_type="qweb-pdf"
            name="stock_views_extension.report_pickingopeartion"
            file="stock_views_extension.report_pickingoperation"
            print_report_name="'Picking Operations - %s - %s' % (object.partner_id.parent_id.name or '', object.name)"
        />
    </data>
</odoo>
