<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="qc_noi_report">
	<t t-call="web.html_container">
	    <t t-foreach="docs" t-as="o">
		<t t-call="web.external_layout">
		    <div class="page">
			<h2>Inspection Notification <strong><span t-field="o.name"/></strong></h2>
		    </div>
		</t>
	    </t>
	</t>
    </template>

    <report
	id="action_report_qc_noi"
	string="Inspection Notification"
	model="qc.noi"
	report_type="qweb-pdf"
	name="quality_control_noi.qc_noi_report"
	file="quality_control_noi.qc_noi_report"
	print_report_name="'NOI - %s - %s' % ((object.name).replace('/', ''), object.sale_order_ids[0].name)"
    />
</odoo>
