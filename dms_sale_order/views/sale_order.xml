<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_dms" model="ir.ui.view">
	<field name="name">sale.order.form.dms</field>
	<field name="model">sale.order</field>
	<field name="inherit_id" ref="sale.view_order_form"/>
	<field name="arch" type="xml">
	    <xpath expr="//notebook" position="inside">
                <page string="DMS Attachments" name="dms">
		    <field name="dms_ids" context="{'default_sale_id': active_id}">
			<tree>
			    <field name="name"/>
			    <field name="category_id"/>
			    <field name="create_date"/>
			    <field name="content" widget="binary"/>
			    <field name="signed_doc" widget="binary"/>
			</tree>
		    </field>
		</page>
	    </xpath>
	</field>
    </record>

</odoo>
