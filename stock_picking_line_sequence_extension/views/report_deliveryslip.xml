<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_delivery_document"
              inherit_id="stock.report_delivery_document">
        <xpath expr="//table[2]/thead/tr/th[1]" position="replace">
            <th class="ml-2"><strong>Line #</strong></th>
            <th><strong>Item #</strong></th>
        </xpath>
        <xpath expr="//table[2]/tbody/tr/td[1]" position="attributes">
            <attribute name="class">ml-2</attribute>
        </xpath>
        <xpath expr="//table[2]/tbody/tr/td[1]" position="after">
            <td>
                <span t-field="move.item"/>
            </td>
        </xpath>
        <xpath expr="//table[3]/thead/tr/th[1]" position="replace">
            <th class="ml-2"><strong>Line #</strong></th>
            <th><strong>Item #</strong></th>
        </xpath>
        <xpath expr="//table[3]/tbody/tr/td[1]" position="attributes">
            <attribute name="class">ml-2</attribute>
        </xpath>
        <xpath expr="//table[3]/tbody/tr/td[1]" position="after">
            <td>
                <span t-field="move_line.move_id.item"/>
            </td>            
        </xpath>
    </template>

</odoo>
