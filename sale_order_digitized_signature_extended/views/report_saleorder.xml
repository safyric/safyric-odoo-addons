<?xml version="1.0"?>
<odoo>

    <template id="report_saleorder_document"
              inherit_id="sale.report_saleorder_document">
      <xpath expr="//span[@t-if='doc.customer_signature']/.." position="replace">
          <div class="row" style="page-break-inside: avoid">
            <div class="col-6">
              <table class="table-sm border-black" width="90%">
                <tr>
                  <td><strong>Customer acceptance</strong></td>
                </tr>
                <tr>
                  <td class="bg-light" style="height: 160px">
                    <div class="container">
                      <div>
                        <span t-if="doc.customer_signature">
                          <img class="image" t-att-src="'data:image/png;base64,%s' % to_text(doc.customer_signature)" style="border:auto;max-width:300px"/>
                        </span>
                      </div>
                    </div>
                  </td>
                </tr>
              </table>
            </div>
        </div>
      </xpath>
  </template>
</odoo>
