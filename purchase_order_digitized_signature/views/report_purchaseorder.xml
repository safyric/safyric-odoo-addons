<?xml version="1.0"?>
<odoo>

    <template id="report_purchaseorder_document"
              inherit_id="purchase.report_purchaseorder_document">
      <xpath expr="//div[@class='oe_structure'][last()]" position="before">
          <div class="row" style="page-break-inside: avoid">
            <div class="col-6">
              <table class="table-sm border-black" width="90%">
                <tr>
                  <td><strong>Seller acceptance</strong></td>
                </tr>
                <tr>
                  <td class="bg-light" style="height: 120px">
                    <div class="container">
                      <div>
                        <span t-if="o.seller_signature">
                          <img class="image" t-att-src="'data:image/png;base64,%s' % to_text(o.seller_signature)" style="border:auto;max-width:300px"/>
                          <p t-field="o.seller_sign_date" class="oe_inline"/>
                        </span>
                      </div>
                    </div>
                  </td>
                </tr>
              </table>
            </div>
            <div class="col-6">
              <table class="table-sm border-black pull-right" width="10%">
                <tr>
                  <td class="bg-light"><strong>Buyer signature</strong></td>
                </tr>
                <tr>
                  <td class="bg-light" style="height: 120px">
                    <div class="container">
                      <div>
                        <span t-if="o.buyer_signature">
                          <img class="image" t-att-src="'data:image/png;base64,%s' % to_text(o.buyer_signature)" style="border:auto;max-width:300px"/>
                          <p t-field="o.buyer_sign_date" class="oe_inline"/>
                        </span>
                      </div>
                    </div>
                  </td>
                </tr>
              </table>
            </div>
          </div>
      </xpath>
    </template>

</odoo>
