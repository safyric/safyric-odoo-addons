<?xml version="1.0" ?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase_order_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='notes']" position="after">
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <label for="seller_signature" string='Seller Signature'/>
                            <field name="seller_signature" widget="signature"/>
                            <field name="seller_sign_date" class="oe_read_only"/>
                        </div>
                        <div class="col-6">
                            <label for="buyer_signature" string='Buyer Signature'/>
                            <field name="buyer_signature" widget="signature"/>
                            <field name="buyer_sign_date" class="oe_read_only"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
