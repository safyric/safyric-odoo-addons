<?xml version="1.0" ?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase_order_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
                <page string="Signatures" name="signatures">
                    <group>
                        <group>
                            <label for="seller_signature"/>
                            <div class="row">
                                <field name="seller_signature" widget="signature"/>
                                <field name="seller_sign_date" readonly="1"/>
                            </div>
                        </group>
                        <group>
                            <label for="buyer_signature"/>
                            <div class="row">
                                <field name="buyer_signature" widget="signature"/>
                                <field name="buyer_sign_date" readonly="1"/>
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
