<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
    <xpath expr="//th[@name='lot_serial']" position="attributes">
      <attribute name="t-if" add="and o.show_serial" separator=" "/>
    </xpath>
    <xpath expr="//span[@t-field='move_line.product_uom_id']">
      <p t-if="o.show_serial" name="td_show_serial">
        
      </p>
    </xpath>
    <xpath expr="//p[@name='td_show_serial']" position="inside">
      <xpath expr="//span[@t-field='move_line.lot_name']/.." position="move"/>
      <xpath expr="//span[@t-field='move_line.lot_id.name']/.." position="move"/>
    </xpath>
  </template>
</odoo>
