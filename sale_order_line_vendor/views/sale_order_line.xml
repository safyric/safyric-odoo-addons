<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_sale_stock" model="ir.ui.view">
            <field name="name">sale.order.form.sale.stock</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page/field[@name='order_line']/form/group/group/field[@name='tax_id']" position="before">
                    <field name="product_vendor" attrs="{'invisible': [('product_id', '=', False)]}" context="{'default_product_id': product_id, 'tree_view_ref':'product.product_supplierinfo_tree_view', 'form_view_ref':'product.product_supplierinfo_form_view'}" domain="[('product_id','=',product_id)]" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
