<odoo>
    <record id="digital_signature_wizard" model="ir.ui.view">
        <field name="name">digital.signature.wizard.form</field>
        <field name="model">dms.digital.signature</field>
        <field name="arch" type="xml">
            <form string="Digital Signature Wizard">
                <group class="oe_title">
		    <field name="signature_type" widget="radio" options="{'horizontal': true}"/>
		    <field name="signature_id" domain="['|', ('user_id', '=', uid), ('user_id', '=', False)]" 
			options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"
			attrs="{'invisible': [('signature_type', '!=', 'select')]}"/>
                    <label for="signature" string="Preview/Upload" attrs="{'invisible': [('signature_type', '!=', 'select')]}"/>
		    <field name="signature" widget="image" nolabel="1" attrs="{'invisible': [('signature_type', '!=', 'select')]}"/>
		    <field name="signature_draw" widget="signature" nolabel="1" attrs="{'invisible': [('signature_type', '!=', 'draw')]}"/>
                    <field name="signature_keyword"/>
                    <field name="signature_width"/>
                    <field name="signature_height"/>
                </group>
                <footer>
                    <button name="dms_digital_signature" string="Sign" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="digital_signature_action" model="ir.actions.act_window">
        <field name="name">Digital Signature</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dms.digital.signature</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="digital_signature_wizard"/>
        <field name="target">new</field>
    </record>

</odoo>
