<?xml version="1.0" ?>
<odoo>

    <record id="view_order_form_signature" model="ir.ui.view">
        <field name="name">view_order_form_signature</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='note']" position="after">
                <div class="oe_clear"/>
                <label for="customer_signature" string='Customer Signature'
                       class="oe_edit_only"/>
                <field name="customer_signature" widget="signature"/>
            </xpath>
	    <xpath expr="//header" position="inside">
		<button name="%(digital_signature_action)d" string="Sign" type="action" class="oe_highlight oe_read_only"/>
	    </xpath>
        </field>
    </record>

</odoo>
