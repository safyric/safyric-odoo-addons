<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_qc_mtc_document">
    <t t-call="quality_control_mtc.external_layout">
      <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
      <div class="page">
        <div class="oe_structure"/>
        <table class="table-sm table-bordered p-0 m-0" width="100%">
          <thead>
            <tr>
              <th>
                <div class="text-muted font-weight-light" style="font-size:8px;">Customer Name</div>
                <div><small t-field="doc.partner_id"/></div>
              </th>
              <th>
                <div class="text-muted text-nowrap font-weight-light" style="font-size:8px;">PO Number</div>
                <div class="text-nowrap"><small t-field="doc.sale_order_id.client_order_ref"/></div>
              </th>
              <th>
                <div class="text-muted text-nowrap font-weight-light" style="font-size:8px;">Safyric Order Number</div>
                <div class="text-nowrap"><small t-field="doc.sale_order_id.name"/></div>
              </th>
              <th>
                <div class="text-muted text-nowrap font-weight-light" style="font-size:8px;">Certificate Number</div>
                <div class="text-nowrap"><small t-field="doc.name"/></div>
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <div class="text-muted font-weight-light" style="font-size:8px;">Product Name</div>
                <div><small t-field="doc.description"/></div>
              </td>
              <td>
                <div class="text-muted font-weight-light" style="font-size:8px;">Line/Tag Number</div>
                <div><small t-field="doc.item_tag"/></div>
              </td>
              <td>
                <div class="text-muted font-weight-light" style="font-size:8px;">Quantity</div>
                <div><span><small t-field="doc.quantity"/> <small t-field="doc.product_id.uom_id.name"/></span></div>
              </td>
              <td>
                <div class="text-muted font-weight-light" style="font-size:8px;">Date of Issue</div>
                <div class="text-nowrap"><small t-esc="doc.date.strftime('%A, %B %d, %Y')"/></div>
              </td>
            </tr>
            <tr>
              <td colspan="999" style="border-left:hidden;border-right:hidden;"/>
            </tr>
            <tr>
              <td colspan="999">
                <table class="table-sm table-bordered p-0 m-0" width="100%" style="padding: 0 !important;margin: 0 !important;">
                  <tr>
                    <td>
                      
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </tbody>
        </table>
      </div>      
    </t>
  </template>

  <template id="report_qc_mtc">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="doc">
	<t t-call="quality_control_mtc.report_qc_mtc_document" t-lang="doc.partner_id.lang"/>
      </t>
    </t>
  </template>
</odoo>

