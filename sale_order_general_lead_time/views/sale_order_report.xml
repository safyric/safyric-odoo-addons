<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
    <xpath expr="//div[@t-if='doc.payment_term_id']" position="after">
      <div t-if="doc.general_lead_time" class="row">
        <span>Lead Time: </span>
        <span t-field="doc.general_lead_time" class="m-0"/>
        <span> days</span>
      </div>
    </xpath>
    <xpath expr="//th[@name='th_quantity']" position="after">
      <th class="text-right">Lead Time</th>
    </xpath>
    <xpath expr="//td[@name='td_quantity']" position="after">
      <td class="text-right">
        <t t-if="doc.weeks_in_reports">
          <span t-esc="int(float(round(line.customer_lead/7+1,0)))"/><span> Weeks</span>
        </t>
        <t t-else="">
          <span t-esc="int(float(line.customer_lead))"/><span> Days</span>
        </t>
      </td>
    </xpath>
  </template>
</odoo>
