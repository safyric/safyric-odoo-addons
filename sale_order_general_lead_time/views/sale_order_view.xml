<?xml version="1.0"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <label for="general_lead_time"/>
                <div class="o_row">
                    <field name="general_lead_time"/>
                    <button name="action_update_lead_time" class="oe_link oe_edit_only fa fa-refresh" type="object" help="Update lead time"/>
                </div>
                <field name="weeks_in_reports"/>
            </xpath>
        </field>
    </record>

</odoo>
