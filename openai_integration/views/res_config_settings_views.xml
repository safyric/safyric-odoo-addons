<?xml version="1.0"?>
<odoo>
    <record id="is_res_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.is.chatgpt.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <h2>Artificial Intelligence</h2>
                <div class="row mt16 o_settings_container" id="openai_integraion">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
			    <span class="o_form_label">OpenAI</span>
			    <div class="text-muted">
				Settings for OpenAI including API Keys and API Base
			    </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="API Key" for="openai_api_key" class="col-3 col-lg-3 o_light_label"/>
                                    <field name="openai_api_key" title="OpenAI API Key" class="oe_inline"/>
				</div>
				<div class="row mt16">
				    <label string="API Base" for="openai_api_base" class="col-3 col-lg-3 o_light_label"/>
				    <field name="openai_api_base" title="OpenAI API Bsse" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
