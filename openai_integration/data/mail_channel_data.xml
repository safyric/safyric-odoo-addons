<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="mail.channel" id="channel_chatgpt">
            <field name="name">OpenAI</field>
            <field name="description">OpenAI Integration</field>
            <field name="image" type="base64" file="openai_integration/static/description/chatgpt.png"/>
            <field name="group_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record model="mail.message" id="module_install_notification" context="{'mail_notify_noemail': True}">
            <field name="model">mail.channel</field>
            <field name="res_id" ref="openai_integration.channel_chatgpt"/>
            <field name="message_type">email</field>
            <field name="subtype_id" ref="mail.mt_comment"/>
            <field name="subject">Welcome to ChatGPT Channel!</field>
            <field name="body"><![CDATA[<p>Welcome to the #ChatGPT channel.</p>
            <p>Ask your questions to ChatGPT</b>.</p>]]></field>
        </record>
    </data>
</odoo>
