<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="openai_integration.partner_ai" model="res.partner">
            <field name="name">OpenAI</field>
	    <field name="company_id" ref="base.main_company"/>
	    <field name="active" eval="False"/>
            <field name="image" type="base64" file="openai_integration/static/description/chatgpt.png"/>
        </record>

        <record id="openai_integration.user_ai" model="res.users"> 
	    <field name="login">openai</field>
	    <field name="email">openai@safyric.com</field>
	    <field name="partner_id" ref="openai_integration.partner_ai"/>
	    <field name="company_id" ref="base.main_company"/>
	    <field name="company_ids" eval="[(4, ref('base.group_user'))]"/>
	    <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
	    <field name="active" eval="False"/>
        </record>
    </data>
</odoo>
