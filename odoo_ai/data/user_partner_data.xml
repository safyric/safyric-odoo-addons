<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="odoo_ai.partner_ai" model="res.partner">
            <field name="name">AI Bot</field>
	    <field name="company_id" ref="base.main_company"/>
	    <field name="active" eval="True"/>
            <field name="image" type="base64" file="odoo_ai/static/description/chatgpt.png"/>
        </record>

        <record id="odoo_ai.user_ai" model="res.users"> 
	    <field name="login">ai</field>
	    <field name="email">ai@example.com</field>
	    <field name="partner_id" ref="odoo_ai.partner_ai"/>
	    <field name="company_id" ref="base.main_company"/>
	    <field name="company_ids" eval="[(4, ref('base.group_user'))]"/>
	    <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
	    <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
