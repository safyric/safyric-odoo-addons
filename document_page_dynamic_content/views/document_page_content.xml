<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="document_page_content_tree_view">
        <field name="name">document.page.content.tree</field>
        <field name="model">document.page.content</field>
        <field name="arch" type="xml">
            <tree string="Content" default_order='document_page_id, sequence'>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="title"/>
                <field name="document_page_id"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="document_page_content_form_view">
        <field name="name">document.page.content.form</field>
        <field name="model">document.page.content</field>
        <field name="arch" type="xml">
            <form string="Document Page Content">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="title"/>
                            <field name="document_page_id"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <field name="content" widget="html"/>
                    <group class="oe_edit_only">
                        <field name="field_domain" widget="domain" nolabel="1"
                               options="{'model': 'document.page.content',
                                             'partial_use': True}" />
                        <group>
                            <field name="default_value"/>
                            <field name="copyvalue"/>
                        </group>
                        <p>
                            This section (on the left) allows you to add dynamic fields inside the content.
                            <ol>
                                <li>Select the field using the popup</li>
                                <li>Enter the default value if the field is empty</li>
                                <li>Copy and paste the placeholder expression in the content</li>
                            </ol>
                        </p>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="document_page_content_search_view">
        <field name="name">document.page.content.search</field>
        <field name="model">document.page.content</field>
        <field name="arch" type="xml">
            <search string="Document Page Content Search">
                <filter name="group_document" icon="terp-partner" context="{'group_by':'document_page_id'}"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_document_page_content">
        <field name="name">Content</field>
        <field name="res_model">document.page.content</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            name="Document Content"
            id="document_page_content"
            parent="mgmtsystem.menu_mgmtsystem_root"
            sequence="30"
            action="action_document_page_content"/>


</odoo>
