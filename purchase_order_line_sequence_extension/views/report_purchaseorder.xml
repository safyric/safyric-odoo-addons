<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_purchaseorder_documen"
            inherit_id="purchase.report_purchaseorder_document">
    <xpath expr="//table/thead/tr/th[1]" position="replace">
      <th><strong>Line #</strong></th>
      <th><strong>Item #</strong></th>
    </xpath>
    <!--complicated expr to be compatible with other modules-->
    <xpath expr="//table/tbody//span[@t-field='line.name']/.." position="before">
      <td>
        <span t-field="line.item"/>
      </td>
    </xpath>
  </template>
</odoo>
