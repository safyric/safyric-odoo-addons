<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="external_layout_account">
    <div class="header">
      <div class="o_background_header">
        <div class="float-right">
          <h3 class="mt0 text-right" t-field="company.report_header"/>
        </div>
        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-left" alt="Logo" height="50px;"/>
        <div class="float-left" t-if="company.report_header_name">
          <span style="font-family: 'Prompt' sans-serif; font-weight: 200; font-size: 30px; whitespace: nowrap;" t-field="company.report_header_name"/>
        </div>
        <div class="float-right">
          <h3 class="text-right text-nowrap">
              <span t-if="o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">INVOICE<br/></span>
              <span t-if="o.type == 'out_invoice' and o.state == 'draft'">DRAFT INVOICE<br/></span>
              <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">CANCELLED INVOICE<br/></span>
              <span t-if="o.type == 'out_refund'">CREDIT NOTE<br/></span>
              <span t-if="o.type == 'in_refund'">VENDOR CREDIT NOTE<br/></span>
              <span t-if="o.type == 'in_invoice'">VENDOR BILL<br/></span>
              <span class="text-muted" t-field="o.number"/>
          </h3>
        </div>
        <div class="clearfix"/>
      </div>
    </div>

    <div class="article o_report_layout_background" t-att-data-oe-model="o and o._name" 
         t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')" style="font-size: 12px !important;">
      <t t-raw="0"/>
    </div>

    <div class="footer o_background_footer" style="font-size: 13px !important;">
      <div class="text-center">
        <ul class="list-inline">
          <li t-if="company.phone" class="list-inline-item"><i class="fa fa-phone" role="img" aria-label="Phone" title="Phone"/> <span t-field="company.phone"/></li>
          <li t-if="company.email_invoicing" class="list-inline-item"><i class="fa fa-at" role="img" aria-label="Email" title="Email"/> <span t-field="company.email_invoicing"/></li>
          <li t-if="company.website" class="list-inline-item"><i class="fa fa-globe" role="img" aria-label="Website" title="Website"/> <span t-field="company.website"/></li>
          <li t-if="company.vat" class="list-inline-item"><i class="fa fa-building-o" role="img" aria-label="Fiscal number"/><t t-esc="(company.country_id.vat_label or 'Tax ID').replace(' ','\N{NO-BREAK SPACE}')"/>: <span t-esc="company.vat.replace(' ','\N{NO-BREAK SPACE}')"/></li>
        </ul>
        <div t-if="report_type == 'pdf'" class="text-muted">
          Page
          <span class="page" style="font-size: 13px !important;"/>
          of
          <span class="topage" style="font-size: 13px !important;"/>
        </div>
      </div>
    </div>
  </template>
  <template id="external_layout">
    <t t-if="not o" t-set="o" t-value="doc"/>
    <t t-if="not company">
      <!-- Multicompany -->
      <t t-if="company_id">
        <t t-set="company" t-value="company_id"/>
      </t>
      <t t-elif="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id.sudo()"/>
      </t>
      <t t-else="else">
        <t t-set="company" t-value="res_company"/>
      </t>
    </t>
    <t t-call="account_views_extension.external_layout_account"><t t-raw="0"/></t>
  </template>
</odoo>
