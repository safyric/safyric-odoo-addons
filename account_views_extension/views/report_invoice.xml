<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="external_layout_account_invoice" inherit_id="account_views_extension.external_layout_account" primary="True">
            <xpath expr="//h3/span[3]" position="replace">
                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">CANCELLED COMMERCIAL INVOICE<br/></span>
            </xpath>
            <xpath expr="//h3/span[2]" position="replace">
                <span t-if="o.type == 'out_invoice' and o.state == 'draft'">DRAFT COMMERCIAL INVOICE<br/></span>
            </xpath>
            <xpath expr="//h3/span[1]" position="replace">
                <span t-if="o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">COMMERCIAL INVOICE<br/></span>
            </xpath>
        </template>
        
        <template id="report_invoice_document_commercial" inherit_id="account_views_extension.report_invoice_document" primary="True">
            <xpath expr="//t[@t-call='account_views_extension.external_layout']" position="attributes">
                <attribute name="t-call">account_views_extension.external_layout_invoice</attribute>
            </xpath>
            <xpath expr="//th[@name='th_quantity']" position="before">
                <th class="text-left"><span>HS Code</span></th>
            </xpath>
            <xpath expr="//span[@t-esc='int(float(line.quantity))']/.." position="before">
                <td class="text-left"><span t-field="line.product_id.hs_code"/></td>
            </xpath>
            <xpath expr="//p[@t-if='o.reference']" position="attributes">
                <attribute name="t-att-style">'display: none;'</attribute>
            </xpath>
            <xpath expr="//div[@t-if='o.user_id.partner_id.mobile']" position="attributes">
                <attribute name="t-att-style">'display: none;'</attribute>
            </xpath>
            <xpath expr="//div[@t-if='o.user_id.partner_id.email']" position="attributes">
                <attribute name="t-att-style">'display: none;'</attribute>
            </xpath>
            <xpath expr="//div[@name='due_date']" position="attributes">
                <attribute name="t-att-style">'display: none;'</attribute>
            </xpath>
        </template>

        <template id="external_layout_invoice">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-call="account_views_extension.external_layout_account_invoice"><t t-raw="0"/></t>
        </template>
        
        <template id="report_commercial_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="account_views_extension.report_invoice_document_commercial" t-lang="lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
