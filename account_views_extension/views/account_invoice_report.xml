<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_invoice_document" inherit_id="account.report_invoice_document">
    <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
      <attribute name="t-call">account_views_extension.external_layout</attribute>
    </xpath>
    <xpath expr="//div[@id='informations']" position="attributes">
      <attribute name="t-att-style">'display: none;'</attribute>
    </xpath>
    <xpath expr="//t[@t-set='o']" position="after">
      <div class="row">
        <div class="col-6">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light">
                <t t-if="o.type == 'out_invoice' or o.type == 'in_invoice'"><strong>Invoicing Address</strong></t>
                <t t-else=""><strong>Vendor</strong></t>
              </td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <div id="customer">
                    <t t-if="o.partner_id.parent_id">
                      <div class="row">
                        <span t-field="o.partner_id.parent_id" 
                              t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                      </div>
                      <div class="row">
                        <span>Contact: </span><span t-field="o.partner_id.name"/>
                        <t t-if="o.partner_id.mobile"><i class="fa fa-mobile"/><span t-field="o.partner_id.mobile" class="m-0"/></t>
                      </div>
                    </t>
                    <t t-else="">
                      <div class="row">
                        <span t-field="o.partner_id" 
                              t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                      </div>
                    </t>
                    <div class="row" t-if="o.partner_id.email">
                      <i class="fa fa-envelope-o fa-fw"/><span t-if="o.partner_id.email" t-field="o.partner_id.email"/>
                    </div>
                    <div class="row" t-if="o.partner_id.vat">
                      <span>
                        <t if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"/>
                        <t if="not o.company_id.country_id.vat_label"><span>Tax ID</span></t><span>: </span>
                      </span>
                      <p t-field="o.partner_id.vat"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6" id="informations">
          <table class="table-sm border-black pull-right" width="100%">
            <tr>
              <td class="bg-light"><strong>Information</strong></td>
            </tr>
            <tr>
              <td id="information">
                <div class="container">
                  <div class="pull-right">
                    <div t-if="o.date_invoice" class="row" name="invoice_date">
                      <span t-if="o.type == 'out_invoice'">Invoice Date: </span>
                      <span t-if="o.type == 'out_refund' or o.type == 'in_refund'">Note Date: </span>
                      <span t-if="o.type == 'in_invoice'">Bill Date: </span>
                      <span t-field="o.date_invoice" t-options='{"widget": "date"}' class="m-0"/>
                    </div>
                    <div t-if="o.date_due and o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')" class="row" name="due_date">
                      <span>Due Date: </span>
                      <span t-field="o.date_due" t-options='{"widget": "date"}' class="m-0"/>
                    </div>
                    <div class="row">
                      <span>Company: </span>
                      <span t-field="o.company_id" class="m-0"/>
                    </div>
                    <div class="row">
                      <span>Sales Rep: </span>
                      <span t-field="o.user_id.partner_id.name" class="m-0"/>
                    </div>
                    <div class="row" t-if="o.user_id.partner_id.mobile">
                      <i class="fa fa-mobile"/><span t-field="o.user_id.partner_id.mobile" class="m-0"/>
                    </div>
                    <div t-if="o.user_id.partner_id.email" class="row">
                      <i class="fa fa-envelope-o fa-fw"/>
                      <span t-field="o.user_id.partner_id.email" class="m-0"/>
                    </div>
                    <div t-if="o.name" class="row" name="description">
                      <span>Reference: </span>
                      <span t-field="o.name" class="m-0"/>
                    </div>
                    <div t-if="o.origin" class="row" name="origin">
                      <span>Source Document: </span>
                      <span t-field="o.origin" class="m-0"/>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-6" t-if="o.type == 'out_invoice'">
          <table class="table-sm border-black" width="90%">
            <tr>
              <td class="bg-light"><strong>Shipping Address</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container">
                  <t t-if="o.partner_shipping_id.parent_id">
                    <div class="row">
                      <div t-field="o.partner_shipping_id.parent_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                    <div class="row">
                      <span>Contact: </span><span t-field="o.partner_shipping_id.name"/>
                      <t t-if="o.partner_id.mobile"><i class="fa fa-mobile"/><span t-field="o.partner_id.mobile" class="m-0"/></t>
                    </div>
                  </t>
                  <t t-else="">
                    <div class="row">
                      <div t-field="o.partner_shipping_id"
                           t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                  </t>
                  <div class="row" t-if="o.partner_shipping_id.email">
                    <i class="fa fa-envelope-o fa-fw"/><span t-if="o.partner_shipping_id.email" t-field="o.partner_id.email"/>
                  </div>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6" t-if="o.type == 'out_invoice'">
          <table class="table-sm border-black" width="100%">
            <tr>
              <td class="bg-light"><strong>Beneficiary Information</strong></td>
            </tr>
            <tr>
              <td>
                <div class="container" name="beneficiary">
                </div>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="clearfix"/>
    </xpath>
    <xpath expr="//t[@t-set='address']" position="attributes">
      <attribute name="t-att-style">'display: none;'</attribute>
    </xpath>
    <xpath expr="//div[hasclass('page')]//h2" position="replace"/>
    <xpath expr="//thead/tr" position="attributes">
      <attribute name="class" add="align-top text-nowrap" separator=" "/>
    </xpath>
    <xpath expr="//span[@t-field='line.quantity']" position="replace">
      <span t-esc="int(float(line.quantity))"/>
    </xpath>
  </template>
</odoo>
